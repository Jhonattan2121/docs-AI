---
import Navigation from '../components/Navigation.astro';
import '../styles/docs.css';

interface Props {
  title: string;
  version?: string;
}

const { title, version = 'latest' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Documentation</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {import.meta.env.PROD && <link rel="stylesheet" href="/_pagefind/pagefind-ui.css" />}
  </head>
  <body class="bg-gray-50">
    <div class="flex min-h-screen">
      <Navigation version={version} />
      <main class="flex-1 px-4 py-8 sm:px-8 max-w-4xl mx-auto">
        <slot />
      </main>
    </div>
    {import.meta.env.PROD && <script src="/_pagefind/pagefind-ui.js"></script>}
  </body>
</html>