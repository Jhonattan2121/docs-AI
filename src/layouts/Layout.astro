---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
 	<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <style is:global>
      /* Core styling for body and html */
      html, body {
        margin: 0;
        padding: 0;
        font-family: 'Inter', sans-serif;
        background-color: #f9f9f9;
        color: #333;
      }

      /* Basic styling for h1 to give it a nice, clean header */
      h1 {
        font-size: 2.5rem;
        color: #111;
        font-weight: 600;
        text-align: center;
        margin-top: 3rem;
        margin-bottom: 2rem;
      }

      /* Prose styling for clean, readable text */
      .prose {
        max-width: 80ch;
        margin: 0 auto;
        padding: 1rem;
        line-height: 1.7;
        color: #444;
      }

      /* Styling for code elements */
      code {
        background-color: #f1f1f1;
        padding: 0.2rem 0.5rem;
        border-radius: 5px;
        font-size: 1rem;
        color: #d6336c;
      }

      pre {
        background-color: #f1f1f1;
        padding: 1rem;
        border-radius: 8px;
        overflow-x: auto;
        font-size: 1.1rem;
        color: #333;
      }

      /* Styling for links */
      a {
        color: #0066cc;
        text-decoration: none;
        transition: color 0.3s ease;
      }

      a:hover {
        color: #ff6347; /* Tomato color on hover */
      }

      /* Layout of the page container and slot for content */
      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 0 1rem;
      }

      .content {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 800px;
      }

      /* Make everything responsive */
      @media (max-width: 768px) {
        h1 {
          font-size: 2rem;
        }

        .prose {
          padding: 0.5rem;
        }

        .content {
          padding: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
  
        <slot />
    
  </body>
</html>
